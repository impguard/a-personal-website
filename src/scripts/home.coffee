$(() ->

    #============================================================
    # Constants
    #============================================================

    $home = $("#home")

    #============================================================
    # Vivus
    #============================================================

    vivus = new Vivus("kevin", 
        type: "delayed"
        duration: 200
        delay: 100
        start: "manual"
    )

    #============================================================
    # Transition Eye Candy
    #============================================================
    
    animateIn = () ->
        vivus.play(1)
    
    $home.data("transitionIn", animateIn)
)